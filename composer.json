{
  "name": "phluxor/phluxor-websocket",
  "license": "Apache-2.0",
  "type": "library",
  "keywords": [
    "actor",
    "actor-model",
    "grpc",
    "swoole"
  ],
  "description": " For Phluxor Remote Actor System",
  "authors": [
    {
      "name": "Yuuki Takezawa",
      "email": "yuuki.takezawa@comnect.jp.net"
    }
  ],
  "require": {
    "php": "^8.3",
    "ext-swoole": "*",
    "google/protobuf": "^3.25.3",
    "psr/log": "^3.0",
    "phluxor/phluxor": "0.1.9"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5.11",
    "phpstan/phpstan": "^1.10.67",
    "swoole/ide-helper": "^5.1.3",
    "squizlabs/php_codesniffer": "^3.10.1",
    "slevomat/coding-standard": "^8.15.0",
    "monolog/monolog": "^3.6.0"
  },
  "suggest": {
    "ext-protobuf": "serialization with protobuf"
  },
  "autoload": {
    "psr-4": {
      "Phluxor\\WebSocket\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Test\\": "tests/Test"
    }
  },
  "scripts": {
    "tests": [
      "./vendor/bin/phpunit"
    ],
    "cs": [
      "Composer\\Config::disableProcessTimeout",
      "./vendor/bin/phpcs --standard=./phpcs.xml --ignore=*/ProtoBuf/*,*/Metadata/* src"
    ],
    "cs-fix": [
      "Composer\\Config::disableProcessTimeout",
      "./vendor/bin/phpcbf --ignore=tests/Test/ProtoBuf/*,tests/Test/Metadata/* src tests"
    ]
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true,
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "php-http/discovery": true
    }
  }
}
